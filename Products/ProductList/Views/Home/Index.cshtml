@model List<Product>
@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">

	<h1>Product List</h1>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Product Name</th>
				<th>Price</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in @Model)
			{
				<tr>
					<td>@product.ProductName</td>
					<td>@($"{product.Price:C}")</td>
					<td><a asp-controller="Product" asp-action="ProductDetail" asp-route-slugLink="@product.Slug">Product Detail</a></td>
				</tr>
			}
		</tbody>
	</table>

</div>